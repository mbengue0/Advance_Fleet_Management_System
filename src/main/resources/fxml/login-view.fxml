<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<!-- ROOT: Split Screen Layout -->
<HBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.fleetapp.controller.LoginController"
      prefHeight="500.0" prefWidth="800.0">

    <!-- LEFT SIDE: Branding & Logo -->
    <VBox styleClass="login-left" HBox.hgrow="ALWAYS" alignment="CENTER" spacing="10">
        <!-- Truck Icon (SVG Path) -->
        <SVGPath content="M10 8 C10 6.9 10.9 6 12 6 L26 6 C27.1 6 28 6.9 28 8 L28 20 L10 20 Z M2 14 L2 24 L30 24 L30 14 L26 14 L26 20 L12 20 L12 14 Z M6 24 A3 3 0 0 0 12 24 M22 24 A3 3 0 0 0 28 24"
                 scaleX="3" scaleY="3" fill="white"/>

        <Label text="Fleet" textFill="white">
            <font><Font name="Segoe UI Bold" size="36.0"/></font>
        </Label>
        <Label text="Manager Pro" textFill="#ecf0f1">
            <font><Font name="Segoe UI Light" size="24.0"/></font>
        </Label>
        <Label text="Efficient. Reliable. Secure." textFill="#bdc3c7" style="-fx-padding: 20 0 0 0;"/>
    </VBox>

    <!-- RIGHT SIDE: Login Form -->
    <VBox styleClass="login-right" prefWidth="400.0" spacing="20" alignment="CENTER_LEFT">

        <Label text="Welcome Back" textFill="#2c3e50">
            <font><Font name="Segoe UI Bold" size="28.0"/></font>
        </Label>
        <Label text="Please sign in to continue" textFill="#7f8c8d" style="-fx-padding: 0 0 20 0;"/>

        <!-- Username Field with Icon -->
        <VBox spacing="5">
            <Label text="USERNAME" textFill="#7f8c8d" style="-fx-font-size: 10px; -fx-font-weight: bold;"/>
            <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: #f8f9fa; -fx-border-color: #dee2e6; -fx-border-radius: 5; -fx-padding: 5;">
                <!-- User Icon SVG -->
                <SVGPath content="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"
                         styleClass="icon-fill"/>
                <TextField fx:id="txtUser" promptText="Enter your username" style="-fx-background-color: transparent;" HBox.hgrow="ALWAYS"/>
            </HBox>
        </VBox>

        <!-- Password Field with Icon -->
        <VBox spacing="5">
            <Label text="PASSWORD" textFill="#7f8c8d" style="-fx-font-size: 10px; -fx-font-weight: bold;"/>
            <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: #f8f9fa; -fx-border-color: #dee2e6; -fx-border-radius: 5; -fx-padding: 5;">
                <!-- Lock Icon SVG -->
                <SVGPath content="M18 8h-1V6c0-2.76-2.24-5-5-5S7 3.24 7 6v2H6c-1.1 0-2 .9-2 2v10c0 1.1.9 2 2 2h12c1.1 0 2-.9 2-2V10c0-1.1-.9-2-2-2zm-6 9c-1.1 0-2-.9-2-2s.9-2 2-2 2 .9 2 2-.9 2-2 2zm3.1-9H8.9V6c0-1.71 1.39-3.1 3.1-3.1 1.71 0 3.1 1.39 3.1 3.1v2z"
                         styleClass="icon-fill"/>
                <PasswordField fx:id="txtPass" promptText="Enter your password" style="-fx-background-color: transparent;" HBox.hgrow="ALWAYS"/>
            </HBox>
        </VBox>

        <Button text="LOGIN" onAction="#onLoginClick" maxWidth="Infinity"
                style="-fx-background-color: #2c3e50; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 12; -fx-cursor: hand;"/>

        <Label fx:id="lblMessage" text="" style="-fx-text-fill: #e74c3c;"/>

    </VBox>

</HBox>